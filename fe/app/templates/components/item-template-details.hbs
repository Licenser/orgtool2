{{#if (and tb session.current_user.permission.item_tb)}}
  <div class="toolbar">
    {{#if count}}
      <div class="text-default">{{count}}x</div>
    {{else}}
      {{#if session.current_user.permission.item_edit}}
        <button class="tb tb-default" type="button" {{action 'editItem' item}}><i class="fa fa-gear"></i></button>
      {{/if}}
      {{#if session.current_user.permission.item_delete}}
        <button class="tb tb-danger" type="button" {{action 'deleteItem' item}}><i class="fa fa-close"></i></button>
      {{/if}}
    {{/if}}
  </div>
{{/if}}

<div class={{if count "top-left-sm" "top-left"}}>
    {{#if item.category.img}}
      <img class="top-left-img" src={{item.category.img}}>
    {{/if}}

    <span class="item-name">
      {{item.name}}
    </span>
</div>

{{#if item.img}}
  <img class="item-img" src={{item.img}}>
{{else}}
  {{#if item.category.img}}
    <img class="item-img" src={{item.category.img}}>
  {{/if}}
{{/if}}


{{#unless count}}
<div class="bottom-right">
  <div class="bottom-right-text">
    c: <span class="item-stat">{{get-item-prop item.templateProps "crew"}}</span>
    <span class="item-sep">|</span>
    l: <span class="item-stat">{{get-item-prop item.templateProps "length"}}</span>
    <span class="item-sep">|</span>
    m: <span class="item-stat">{{get-item-prop item.templateProps "mass"}}</span>
  </div>
</div>
{{/unless}}

