{{#if details}}
  {{#link-to 'players.player' player.id tagName="div" class="player-detail"}}
    <div class="col-md-3">
      {{#if player.avatar}}
        <img class="player-avatar" src={{player.avatar}} onerror={{action loadError}}>
      {{else}}
        <div class="player-avatar player-empty-avatar text-center">
          <i class="fa fa-user-o fa-2x" style="color:#666;"></i>
        </div>
      {{/if}}

      <div class="player-name">
        {{player.name}}
      </div>
    </div>

    <div class="col-md-2">
      {{get-uniq player.handles "handle"}}
    </div>

    <div class="col-md-2">
      {{get-uniq mergedUnits "name"}}
    </div>

    <div class="col-md-2">
      {{get-uniq player.excitingRanks "name"}}
    </div>

    <div class="col-md-2 text-right">
      {{player.timezone}}
    </div>

    <div class="col-md-1 text-right">
      {{#if (and session.current_user.permission.ship_read player.ships.length)}}
        {{player.ships.length}}
      {{/if}}
    </div>

  {{/link-to}}
{{else}}
  <div class="player-detail">

    {{#if player.avatar}}
      <img class="player-avatar" src={{player.avatar}} onerror={{action loadError}}>
    {{else}}
      <div class="player-avatar player-empty-avatar text-center">
        <i class="fa fa-user-o fa-2x" style="color:#666;"></i>
      </div>
    {{/if}}

    <div class="player-box">
      <div class="player-info">
        <div class="player-name">
          {{player.name}}<br>

          <span class="player-rank">
            {{get-uniq player.excitingRanks "name"}}
          </span>
        </div>

        <div class="player-remove">
          <div class="player-stats">
            {{!--
            {{#if player.ships.length}}
              i: {{player.ships.length}}
            {{/if}}
            {{#if player.playerUnits.length}}
              u: {{player.playerUnits.length}}
            {{/if}}
            --}}
            {{#bs-dropdown class="player-options" as |dd|}}
              {{#dd.toggle}}
                {{fa-icon "caret-down"}}
              {{/dd.toggle}}
              {{#dd.menu class="pull-right"}}
                {{#if canUnassign}}
                  <li><a href="#" class="text-danger" {{action 'unassignMember' player unit type}}>{{fa-icon "close"}} Unassign</a></li>
                {{/if}}
                <li>
                  {{#link-to 'players.player' player.id}}
                    {{fa-icon "user"}} Profile
                  {{/link-to}}
                </li>
              {{/dd.menu}}
            {{/bs-dropdown}}
          </div>
        </div>

      </div>
    </div>
  </div>
{{/if}}
