<div class={{classlist}} {{action 'editModel' ship_model}}>
{{#if listView}}
    <div class="col-md-2 text-center">
      {{#if ship_model.img}}
        <img class="item-img-sm" src={{ship_model.img}}>
      {{else}}
        <img class="item-img-sm" src="{{session.rootURL}}/images/manufacturers/{{ship_model.manufacturer}}.png">
      {{/if}}
    </div>
    <div class="col-md-2">
      {{ship_model.name}}
    </div>
    <div class="col-md-2">
      {{ship_model.class}}
    </div>
    <div class="col-md-1 text-right">
      {{ship_model.crew}}
    </div>
    <div class="col-md-2 text-right">
      {{ship_model.length}}
    </div>
    <div class="col-md-2 text-right">
      {{fmt-float ship_model.mass}}
    </div>
    <div class="col-md-1">
    </div>
{{else}}

  <div class={{if count "top-left-sm" "top-left"}}>
    <img class="top-left-img" src="{{session.rootURL}}/images/manufacturers/{{ship_model.manufacturer}}.png">
    <span class="item-name">
      {{ship_model.name}}
    </span>
  </div>

  {{#if ship_model.img}}
    <img class="item-img" src={{ship_model.img}}>
  {{else}}
    <img class="item-img" src="{{session.rootURL}}/images/manufacturers/{{ship_model.manufacturer}}.png">
  {{/if}}


    <div class="bottom-right">
      <div class="bottom-right-text">
        {{#if count}}
          {{count}}x
        {{else}}
          <span class="item-stat">{{ship_model.crew}}</span> <i class="fa fa-group"></i> 
          <span class="item-sep">|</span>
          <span class="item-stat">{{ship_model.length}}</span> <i class="fa fa-arrows-h"></i> 
          <span class="item-sep">|</span>
          <span class="item-stat">{{fmt-float ship_model.mass}}</span> <i class="fa fa-balance-scale"></i> 
        {{/if}}
      </div>
    </div>

{{/if}}

</div>
