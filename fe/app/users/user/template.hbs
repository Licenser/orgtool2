{{#bs-modal fade=false size='l' open=showDialog header=false body=false footer=false onHide=(action 'close') class="player-modal" as |md|}}
  {{#md.header}}
    <h4>
      {{#if model.loggedIn}} My user {{/if}}
      {{#if model.name}} {{model.name}} {{else}} &nbsp; {{/if}}
      {{#if model.hasDirtyAttributes}}
        <span class="text-danger">[modified]</span>
      {{/if}}
    </h4>
  {{/md.header}}

  {{#md.body}}

    <div class="row">
      
      <div class="col-md-6">

        <label class="control-label">Name</label>
        {{#if model.errors.name.length}}
          <span class="text-danger">
            {{#each model.errors.name as |err|}}{{err.message}}{{/each}}
          </span>
        {{/if}}
        {{input type="text" class="form-control" id="name" value=model.name readonly=(not (or session.current_user.can_user_edit (eq session.current_user.id model.id)))}}
      </div>

      <div class="col-md-6">
        <label class="control-label">E-Mail</label>
        {{#if model.errors.email.length}}
          <span class="text-danger">
            {{#each model.errors.email as |err|}}{{err.message}}{{/each}}
          </span>
        {{/if}}
        {{input type="text" class="form-control" id="email" value=model.email readonly=(not (or session.current_user.can_user_edit (eq session.current_user.id model.id)))}}
      </div>
    </div>



    <div class="row">
      <div class="col-md-6">
        <label class="control-label">Tree Unfold Level</label>
        {{input type="number" class="form-control" id="unfold-level" value=model.unfold-level readonly=(not (or session.current_user.can_user_edit (eq session.current_user.id model.id)))}}
      </div>

      <div class="col-md-6">
        <label class="control-label">Player</label>
        {{#if model.player}}
          {{player-details player=model.player}}
        {{/if}}
      </div>
    </div>

    {{!--
         <div class="row">
         <label class="control-label">Password</label>
         {{#if model.errors.password.length}}
         <span class="text-danger">
         {{#each model.errors.password as |err|}}{{err.message}}{{/each}}
         </span>
         {{/if}}
         {{input disabled=true type="password" class="form-control" id="password" value=model.password}}
         </div>
         <div class="row">
         <label class="control-label">Password Confirmation</label>
         {{#if model.errors.password_confirmation.length}}
         <span class="text-danger">
         {{#each model.errors.password_confirmation as |err|}}{{err.message}}{{/each}}
         </span>
         {{/if}}
         {{input disabled=true type="password" class="form-control" id="password_confirmation" value=model.password_confirmation}}
         </div>
         --}}

    <hr>
    <div class="row">
      <div class="col-md-2">
        <label class="control-label">Permissions</label>
      </div>
      {{#if canedit}}
        <div class="col-md-10">
          <div class="mylabel">
            <a class="text-green perm-check" href="#" {{action "checkThemAll" "default"}}>{{fa-icon "fa-toggle-off"}} Default</a> 
            <a class="text-red perm-check" href="#" {{action "checkThemAll" true}}>{{fa-icon "fa-toggle-on"}} All</a>
            <a class="text-bright perm-check" href="#" {{action "checkThemAll" false}}>{{fa-icon "fa-toggle-off"}} None</a> 
          </div>
        </div>
      {{/if}}
    </div>

    <div class="row">
      <div class="col-md-2">
        {{check-box value=model.permission.active desc="active" canedit=canedit}}
      </div>
    </div>
    <br>
    <br>

    {{#each filterdPermissions as |perm|}}
      <div class="row">
        <div class="col-md-2">
          <label class="control-label">{{perm.title}}</label> 
        </div>
        {{#if canedit}}
          <div class="col-md-10">
            <div class="mylabel">
              <a class="text-grey perm-check" href="#" {{action "checkAll" perm "default"}}>{{fa-icon "fa-toggle-off"}} Default</a> 
              <a class="text-grey perm-check" href="#" {{action "checkAll" perm true}}>{{fa-icon "fa-toggle-on"}} All</a>
              <a class="text-grey perm-check" href="#" {{action "checkAll" perm false}}>{{fa-icon "fa-toggle-off"}} None</a> 
            </div>
          </div>
        {{/if}}
      </div>
      <div class="row">
        {{#each perm.props as |prop|}}
            <div class="col-md-3">
                {{check-box value=(get model.permission prop.propname) desc=prop.name canedit=canedit}}
            </div>
        {{/each}}
      </div>
    <br>
    {{/each}}

  {{/md.body}}

  {{#md.footer}}
    {{#if (or session.current_user.permission.user_delete (eq session.current_user.id model.id))}}
        <button type="submit" class="btn btn-danger" {{action "deleteUser" model}}>{{fa-icon "user-times"}} Delete</button>
    {{/if}}

    {{#if (or canedit (eq session.current_user.id model.id))}}
      <button type="submit" class="btn btn-primary" {{action "saveUser" model}} disabled={{if (or model.hasDirtyAttributes model.permission.hasDirtyAttributes) false true}}>{{fa-icon "save"}} Save</button>
    {{/if}}

    <button type="button" class="btn btn-default" {{action "close"}}>{{fa-icon "close"}} Close</button>

  {{/md.footer}}
{{/bs-modal}}

{{#if showConfirmDialog}}
  {{confirm-dialog showDialog=showConfirmDialog msg=msg onConfirm=(action "onConfirmed")}}
{{/if}}
